@model BankingApp.Models.Transactions

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transactions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Correct form tag with start and end -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Capture Date -->
            <div class="form-group">
                <label asp-for="CaptureDate" class="control-label"></label>
                <input asp-for="CaptureDate" class="form-control" />
                <span asp-validation-for="CaptureDate" class="text-danger"></span>
            </div>

            <!-- Transaction Date (DatePicker) -->
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label"></label>
                <input asp-for="TransactionDate" class="form-control" type="date" value="@Model.TransactionDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>

            <!-- Transaction Type -->
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- Amount -->
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <!-- Account Selection -->
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label>
                <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<!-- Back to List Link -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
